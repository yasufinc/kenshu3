<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Tweet一覧</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= link_to tweet.content, tweet %></td>
        <td><%= link_to '[Edit]', edit_tweet_path(tweet) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規Tweet作成', new_tweet_path %>
