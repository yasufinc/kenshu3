<%= form_with(model: tweet) do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :publicity %>
    <%= form.select :publicity, ["全体公開","フォロワーのみに公開","非公開"] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
