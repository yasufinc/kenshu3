<%= form_with(model: tweet) do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, required: true%>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true  %>
  </div>

  <div class="field">
    <%= form.label :publicity %>
    <%= form.select :publicity, Tweet.publicities.keys %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
